# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

# default_platform(:ios)

platform :ios do
  desc "Description of what the lane does"

  lane :printCode do | options | 
    code = options[:code]
    sh "echo #{code} > testResultCode"
  end

  lane :test do    
    begin
      run_tests(scheme: "continuous_integration",
                devices: ["iPhone Xʀ"])
    rescue => ex
      UI.important('run_tests failed!')
      printCode(code: 1) # error code for tests failed
      next
    end
    begin
      xcov(scheme: "continuous_integration",
           minimum_coverage_percentage: 50.0,
           json_report: true)
    rescue => ex
      UI.important('xcov failed!')
      printCode(code: 2) # error code for xcov failed
      next
    end
    printCode(code: 0)
  end

  lane :unit_test do
    run_tests(scheme: "continuous_integration",
              devices: ["iPhone Xʀ"],
              code_coverage: true)
  end

  lane :test_coverage do 
    begin
    xcov(scheme: "continuous_integration",
         minimum_coverage_percentage: 50.0,
         json_report: true)
    rescue => ex
      UI.important('xcov failed!')
      echo 2
    end
  end

  lane :ipa_develop do
    build_ios_app(
      configuration: "Debug",
      scheme: "continuous_integration",
      clean: true,
      export_method: 'development',
      output_name: "fastlane_jenkins.ipa",
    )
  end

  error do |lane, exception|

  end
end
